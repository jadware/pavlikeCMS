<div class="modal fade " id="apps-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-lg modal-dialog modal-dialog-top">
        <div class="modal-content">
            <!-- Apps Block -->
            <div class="block block-themed block-transparent">
                <div class="block-header bg-primary-dark">
                    <ul class="block-options">
                        <li>
                            <button data-dismiss="modal" type="button"><i class="si si-close"></i></button>
                        </li>
                    </ul>
                    <h3 class="block-title"></h3>
                </div>
                <div class="block-content">
                    <div class="row text-center">
                        <div class="block block-themed">
                            <div class="block-header bg-primary">

                                <h3 class="block-title">Yeni Makale Ekle</h3>
                            </div>
                            <div class="block-content">
                                <form class="form-horizontal push-10-t push-10" action="base_forms_premade.html" method="post" onsubmit="return false;">
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <div class="form-material">
                                                <input class="form-control" type="text" id="articleTitle" name="articleTitle" placeholder="Makale Başlığını Giriniz...">
                                                <label for="articleTitle">Başlık</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <div class="form-material">
                                                <input class="form-control" type="text" id="articlePage" name="articlePage" placeholder="Sayfa Adını Giriniz...">
                                                <label for="articlePage">Sayfa</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <div class="form-material">
                                                <input class="form-control" type="text" id="articleType" name="articleType" placeholder="Makale Tipini Seçiniz...">
                                                <label for="articleType">Makale Tipi</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <div class="form-material">
                                                <label for="articleBody">Makale Metni</label>
                                                <textarea id="articleBody" name="articleBody" style="visibility: hidden; display: none;">Hello CKEditor!</textarea>

                                                <script type="text/javascript">
                                                    var editor = CKEDITOR.instances['articleBody'];
                                                    if (editor) { editor.destroy(true); }
                                                    CKEDITOR.replace('articleBody', {
                                                        enterMode: CKEDITOR.ENTER_BR,
                                                    });
                                                </script>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <label class="css-input switch switch-sm switch-info">
                                                <input type="checkbox" id="login2-remember-me" name="login2-remember-me"><span></span> Yayında Mı?
                                            </label>
                                        </div>
