    <link rel="apple-touch-icon" sizes="144x144" href="/Content/AdminPanel/assets/img/favicons/apple-touch-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/Content/AdminPanel/assets/img/favicons/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/Content/AdminPanel/assets/img/favicons/apple-touch-icon-180x180.png">
    <!-- END Icons -->
    <!-- Stylesheets -->
    <!-- Web fonts -->
    @*<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400italic,600,700%7COpen+Sans:300,400,400italic,600,700">*@

    <!-- Page JS Plugins CSS -->
    <link rel="stylesheet" href="/Content/AdminPanel/assets/js/plugins/slick/slick.min.css">
    <link rel="stylesheet" href="/Content/AdminPanel/assets/js/plugins/slick/slick-theme.min.css">

    <link href="~/Content/AdminPanel/assets/js/plugins/summernote/summernote.min.css" rel="stylesheet" />
    <link href="~/Content/AdminPanel/assets/js/plugins/summernote/summernote-bs3.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Content/AdminPanel/assets/js/plugins/magnific-popup/magnific-popup.min.css">
    <link href="~/Scripts/dropzone/dropzone.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Content/AdminPanel/assets/js/plugins/datatables/jquery.dataTables.min.css">

    <link href="~/Content/image-picker.css" rel="stylesheet" />

    <!-- CSS framework -->
    <link rel="stylesheet" id="css-main" href="/Content/AdminPanel/assets/css/pavlikeCMS.css">
    @Styles.Render("~/Content/toastr")
    <!-- END Stylesheets -->

    <script src="/Content/AdminPanel/assets/js/core/jquery.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/core/bootstrap.min.js"></script>
    <script src="~/Content/AdminPanel/assets/js/plugins/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
    <script src="~/Scripts/dropzone/dropzone.min.js"></script>

</head>
<body>
    <div id="page-container" class="sidebar-l sidebar-o side-scroll header-navbar-fixed">
        <!-- Side Overlay-->
        <!-- END Side Overlay -->
        <!-- Sidebar -->
        <nav id="sidebar">
            <!-- Sidebar Scroll Container -->
            <div id="sidebar-scroll">
                <!-- Sidebar Content -->
                <!-- Adding .sidebar-mini-hide to an element will hide it when the sidebar is in mini mode -->
                <div class="sidebar-content">
                    <!-- Side Header -->
                    <div class="side-header side-content bg-white-op">
                        <!-- Layout API, functionality initialized in App() -> uiLayoutApi() -->
                        <button class="btn btn-link text-gray pull-right hidden-md hidden-lg" type="button" data-toggle="layout" data-action="sidebar_close">
                            <i class="fa fa-times"></i>
                        </button>
                        <!-- Themes functionality initialized in App() -> uiHandleTheme() -->

                        <a class="h5 text-white" href="indexAdmin.html">
                            <span class="h4 font-w600 sidebar-mini-hide text-city">pavlikeCMS</span>
                        </a>
                    </div>
                    <!-- END Side Header -->
                    <!-- Side Content -->
                    <div class="side-content">
                        <ul class="nav-main">
                            <li>
                                <a class="active" href="@Url.Action("Index", "AdminPanel")"><i class="si si-speedometer"></i><span class="sidebar-mini-hide">Kontrol Paneli</span></a>
                            </li>
                            <li class="nav-main-heading"><span class="sidebar-mini-hide">İçerik Yönetimi</span></li>
                            <li>
                                <a class="nav-submenu" data-toggle="nav-submenu" href="@Url.Action("Index", "Pages")"><i class="si si-badge"></i><span class="sidebar-mini-hide">Sayfalar</span></a>
                            </li>
                            <li>
                                <a class="nav-submenu" data-toggle="nav-submenu" href="@Url.Action("Index", "Articles")"><i class="si si-grid"></i><span class="sidebar-mini-hide">Makaleler</span></a>

                            </li>
                            <li>
                                <a class="nav-submenu" data-toggle="nav-submenu" href="@Url.Action("Index", "Files")"><i class="si si-note"></i><span class="sidebar-mini-hide">Dosyalar</span></a>
                            </li>
                            <li class="nav-main-heading"><span class="sidebar-mini-hide">Ayarlar</span></li>
                            <li>
                                <a class="nav-submenu" data-toggle="nav-submenu" href="@Url.Action("Index", "Authors")"><i class="si si-wrench"></i><span class="sidebar-mini-hide">Kullanıcılar</span></a>

                            </li>
                            <li>
                                <a class="nav-submenu" data-toggle="nav-submenu" href="@Url.Action("Index", "Settings")"><i class="si si-magic-wand"></i><span class="sidebar-mini-hide">Site </span></a>

                            </li>
                            <li>
                                <a class="nav-submenu" data-toggle="nav-submenu" href="@Url.Action("Index", "SocialMedia")"><i class="si si-puzzle"></i><span class="sidebar-mini-hide">Sosyal </span></a>

                            </li>

                        </ul>
                    </div>
                    <!-- END Side Content -->
                </div>
                <!-- Sidebar Content -->
            </div>
            <!-- END Sidebar Scroll Container -->
        </nav>
        <!-- END Sidebar -->
        <!-- Header -->
        <header id="header-navbar" class="content-mini content-mini-full">
            <!-- Header Navigation Right -->
            <ul class="nav-header pull-right">
                <li>
                    @Html.Partial("_LoginPartial")

                </li>

            </ul>
            <!-- END Header Navigation Right -->
            <!-- Header Navigation Left -->
            <ul class="nav-header pull-left">
                <li class="hidden-md hidden-lg">
                    <!-- Layout API, functionality initialized in App() -> uiLayoutApi() -->
                    <button class="btn btn-default" data-toggle="layout" data-action="sidebar_toggle" type="button">
                        <i class="fa fa-navicon"></i>
                    </button>
                </li>
                <li class="hidden-xs hidden-sm">
                    <!-- Layout API, functionality initialized in App() -> uiLayoutApi() -->
                    <button class="btn btn-default" data-toggle="layout" data-action="sidebar_mini_toggle" type="button">
                        <i class="fa fa-ellipsis-v"></i>
                    </button>
                </li>

                <li class="visible-xs">
                    <!-- Toggle class helper (for .js-header-search below), functionality initialized in App() -> uiToggleClass() -->
                    <button class="btn btn-default" data-toggle="class-toggle" data-target=".js-header-search" data-class="header-search-xs-visible" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </li>
                <li class="js-header-search header-search">
                    <form class="form-horizontal" action="base_pages_search.html" method="post">
                        <div class="form-material form-material-primary input-group remove-margin-t remove-margin-b">
                            <input class="form-control" type="text" id="base-material-text" name="base-material-text" placeholder="Arama..">
                            <span class="input-group-addon"><i class="si si-magnifier"></i></span>
                        </div>
                    </form>
                </li>
            </ul>
            <!-- END Header Navigation Left -->
        </header>
        <!-- END Header -->
        <main id="main-container">
            <!-- Page Header -->
            <div class="content bg-image overflow-hidden" style="background-image: url('/Content/AdminPanel/assets/img/photos/img-001.jpg');">
                <div class="push-50-t push-15">
                    <h1 class="h2 text-white animated zoomIn">Kontrol Paneli @Html.ViewBag.Title</h1>
                </div>
            </div>@Html.Partial("_BootstrapModal")
            @RenderBody()

            <!-- END Page Header -->
        </main>
        <!-- Footer -->
        <footer id="page-footer" class="content-mini content-mini-full font-s12 bg-gray-lighter clearfix">
            <div class="pull-right">
                <a class="font-w600 text-city" href="http://pavlike.sapmazbilisim.com" target="_blank">pavlike</a>
            </div>
            <div class="pull-left">
                <a class="font-w600 text-city" href="javascript:void(0)" target="_blank">pavlikeCMS 1.0</a> &copy; <span class="js-year-copy"></span>
            </div>
        </footer>
        <div id="alertDiv">

        </div>
        <!-- END Footer -->
    </div>
    <!-- Core JS: jQuery, Bootstrap, slimScroll, scrollLock, Appear, CountTo, Placeholder, Cookie and App.js -->


    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/core/bootstrap.min.js"></script>

    <script src="/Content/AdminPanel/assets/js/core/jquery.slimscroll.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/core/jquery.scrollLock.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/core/jquery.appear.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/core/jquery.countTo.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/core/jquery.placeholder.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/core/js.cookie.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/app.js"></script>

    <!-- Page Plugins -->
    <script src="/Content/AdminPanel/assets/js/plugins/slick/slick.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/plugins/chartjs/Chart.min.js"></script>
    <script src="/Content/AdminPanel/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <!-- Editors -->
    <script src="~/Content/AdminPanel/assets/js/plugins/summernote/summernote.min.js"></script>
    <script src="~/Content/AdminPanel/assets/js/plugins/ckeditor/ckeditor.js"></script>
    <!-- Gallery -->
    <script src="~/Content/AdminPanel/assets/js/plugins/magnific-popup/magnific-popup.min.js"></script>
    <script src="~/Content/AdminPanel/assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

   
    <script src="~/Scripts/image-picker.js"></script>
    <script src="~/Scripts/jquery.quick.pagination.min.js"></script>

    @Scripts.Render("~/bundles/toastr")
    <script src="~/Scripts/pavlikeLibrary.js"></script>

    <script>
        $(function () {

            App.initHelpers(['ckeditor', 'slick', 'magnific-popup']);
        });
        $(document).ajaxStop(function () {

            var xmlHttp = new XMLHttpRequest();
            xmlHttp.open("GET", "@Url.Action("_Toastr","Home")", false);
            xmlHttp.send(null);

            $("#alertDiv").html(null);
            $("#alertDiv").html(xmlHttp.responseText);
        });

    </script>



</body>
</html>
