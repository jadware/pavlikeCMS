<head>
    <meta charset="utf-8">
    <meta name="description" content="pavlikeCMS - Asp.Net MVC için açık kaynaklı içerik yönetim sistemi">
    <meta name="author" content="pavlike">
    <meta name="robots" content="noindex, nofollow">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Icons -->
    <link rel="shortcut icon" href="/Content/AdminPanel/assets/img/favicons/favicon.png">

    <link rel="icon" type="image/png" href="/Content/AdminPanel/assets/img/favicons/favicon-16x16.png" sizes="16x16">
